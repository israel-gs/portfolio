---
const { text, position } = Astro.props;
---

<div class="relative flex flex-col items-center group">
  <slot />
  <div
    class={`absolute flex flex-col items-center hidden group-hover:flex w-max ${
      position == "top" ? "bottom-0" : "top-0"
    }`}
  >
    <span
      class={`relative rounded z-10 px-4 py-2 text-xs leading-none text-white whitespace-no-wrap bg-black shadow-lg  ${
        position == "top" ? "bottom-10" : "top-10"
      }`}
    >
      {text}
    </span>
  </div>
</div>
