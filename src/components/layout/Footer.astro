---
import TechnologyIcon from "@components/ui/TechnologyIcon.astro";
import { TechnologyName } from "@base/types/TechnologyName";
import Tooltip from "@ui/Tooltip.astro";
---

<footer
  class="flex flex-col justify-center items-center py-20 bg-dark-800 text-white font-satoshi"
>
  <div class="flex flex-col justify-center items-center">
    <span class="mb-3">Portafolio hecho con:</span>
    <div class="flex justify-between">
      {
        [TechnologyName.astro, TechnologyName.tailwindcss].map((technology) => (
          <Tooltip text={technology}>
            <TechnologyIcon
              name={technology}
              className="inline-block w-8 h-8 mx-2"
            />
          </Tooltip>
        ))
      }
    </div>
  </div>
</footer>
