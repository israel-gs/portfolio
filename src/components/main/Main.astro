---
import SocialIcons from "../contact/SocialIcons.astro";
import { Image } from "@astrojs/image/components";
---

<main
  id="home"
  class="flex justify-center items-center font-satoshi h-screen min-h-[900px] main bg-dark-800 relative overflow-hidden"
>
  <div class="w-screen h-screen absolute top-0 left-0">
    <svg width="100%" height="100%" class="text-dark-500">
      <pattern
        id="cool-pattern"
        patternUnits="userSpaceOnUse"
        width="12"
        height="12"
      >
        <path
          d="M5,5 l2,0 l0,2 l-2,0 l0,-2 M0,0 l1,0 l0,1 l-1,0 l0,-1 M11,0 l1,0 l0,1 l-1,0 l0,-1 M0,11 l1,0 l0,1 l-1,0 l0,-1 M11,11 l1,0 l0,1 l-1,0 l0,-1"
          fill="hotpink"
          style="fill: var(--pattern-channel-1, currentcolor)"></path>
      </pattern>
      <rect x="0" y="0" width="100%" height="100%" fill="url(#cool-pattern)">
      </rect>
    </svg>
  </div>
  <div
    class="w-screen h-screen absolute top-0 left-0 bg-gradient-to-b from-dark-800/10 to-dark-800"
  >
  </div>
  <div
    class="max-w-[80%] flex flex-col md:flex-row justify-center items-center py-8 absolute gap-20"
  >
    <div class="flex flex-col gap-4 justify-center items-center md:items-start">
      <h1
        class="text-white text-center md:text-start text-3xl md:text-6xl font-bold text-transparent bg-clip-text bg-gradient-to-r from-secondary-900 to-primary-300"
      >
        <span class="text-4xl md:text-7xl">Israel Gutierrez</span><br />Frontend
        Developer
      </h1>
      <SocialIcons />
    </div>
    <div>
      <Image
        class="rounded-full"
        width="250"
        height="250"
        src="/images/profile.avif"
        format="avif"
        aspectRatio={1}
        quality={80}
        alt=""
      />
    </div>
  </div>
</main>

<style>
  .main {
    overflow: hidden;
  }
</style>
