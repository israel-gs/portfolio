---
import { IconName } from "../../types/IconName";
import Icon from "./Icon.astro";

type Props = {
  href: string;
  className?: string;
  ariaLabel?: string;
  iconName: IconName;
};

const { href, className, ariaLabel, iconName } = Astro.props;
---

<a
  href={href}
  class={`flex justify-center items-center p-2 rounded-full hover:bg-white/10 transition-colors w-[50px] h-[50px] ${className}`}
  rel="noopener noreferrer"
  target="_blank"
  aria-label={ariaLabel || "External link"}
>
  <Icon name={iconName} />
</a>
