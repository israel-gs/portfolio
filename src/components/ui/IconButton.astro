---
import { IconName } from "@base/types/IconName";
import Icon from "@ui/Icon.astro";

type Props = {
  id?: string;
  className?: string;
  iconName: IconName;
};

const { id, className, iconName } = Astro.props;
---

<button
  id={id}
  class={`flex justify-center items-center p-2 rounded-full hover:bg-white/10 transition-colors w-[50px] h-[50px] ${className}`}
>
  <Icon name={iconName} />
</button>
