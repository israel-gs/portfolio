---
type Props = {
  id?: string;
  className?: string;
  type?: "button" | "submit" | "reset";
  buttonStyle?: "normal" | "outline";
};

const { id, className, type = "button", buttonStyle = "normal" } = Astro.props;

let style = `bg-primary-600 hover:bg-primary-800 transition-colors text-white rounded-md px-8 py-4 font-bold font-satoshi ${className}`;

if (buttonStyle === "outline") {
  style +=
    " border border-2 border-primary-800 bg-transparent hover:bg-primary-800 hover:text-white";
}
---

<button id={id} type={type} class={style}>
  <slot />
</button>
