---
type Props = {
  id?: string;
  href?: string;
  className?: string;
  type?: "normal" | "outline";
};

const { id, href, className, type = "normal" } = Astro.props;

let style = `bg-primary-600 hover:bg-primary-800 transition-colors text-white rounded-md px-8 py-4 font-bold font-satoshi ${className}`;

if (type === "outline") {
  style +=
    " border border-2 border-primary-600 bg-transparent hover:bg-primary-600 hover:text-white";
}
---

<a id={id} href={href} target="_blank" rel="noopener noreferrer" class={style}>
  <slot />
</a>
